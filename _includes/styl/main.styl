@import "nib"

body
  font-family: 'Lato', sans-serif

.clearfix
  clear both

.home-wrapper
  text-align center
  margin-top 120px

  .kristen-harding
    font-size 60px
    text-transform uppercase
    font-weight 300
    letter-spacing 2px
    position relative

    strong
      font-weight 400

    .writer-director-editor
      position absolute
      letter-spacing 0
      top 5px
      right -75px
      list-style none
      text-align left
      font-size 13px

      li
        margin-top -4px

.home-nav
  text-align center

  .home-nav-item
    display inline-block
    margin 0 20px
    text-align center
    text-transform uppercase
    color #222
    text-decoration none
    font-size 20px
    font-weight 300

    .nav-image-1
      display block
      background: url('/img/sprite.png') no-repeat -376px -189px;
      width: 74px;
      height: 86px;
      margin-bottom 10px
      margin-left -5px

      &:hover
        background: url('/img/sprite.png') no-repeat -376px -92px;

    .nav-image-2
      display block
      background: url('/img/sprite.png') no-repeat -501px -197px;
      width: 57px;
      height: 73px;
      margin-top -8px
      margin-bottom 18px
      margin-left 5px

      &:hover
        background: url('/img/sprite.png') no-repeat -501px -101px;

    .nav-image-3
      display block
      background: url('/img/sprite.png') no-repeat -602px -196px;
      width: 50px;
      height: 72px;
      margin-top -8px
      margin-bottom 18px
      margin-left 15px

      &:hover
        background: url('/img/sprite.png') no-repeat -601px -98px;

    .nav-image-4
      display block
      background: url('/img/sprite.png') no-repeat -704px -189px;
      width: 74px;
      height: 86px;
      margin-bottom 10px
      margin-left 10px

      &:hover
        background: url('/img/sprite.png') no-repeat -704px -93px;

.sidebar, .content
  padding-top 10px

.sidebar
  width 300px
  float left
  text-align center
  text-transform uppercase

  .current-page-logo-wrapper
    min-height 100px

  .current-page-logo
    display block
    margin 0 auto

    &.current-page-about
      background: url('/img/sprite.png') no-repeat -376px -92px;
      width: 74px;
      height: 86px;

    &.current-page-work
      background: url('/img/sprite.png') no-repeat -501px -101px;
      width: 56px;
      height: 71px;

    &.current-page-resume
      background: url('/img/sprite.png') no-repeat -601px -98px;
      width: 50px;
      height: 72px;

    &.current-page-contact
      background: url('/img/sprite.png') no-repeat -704px -93px;
      width: 72px;
      height: 85px;

  .current-page-name
    font-weight 300
    font-size 28px

  .sidebar-logo
    border-style solid
    border-width 1px 0
    border-color #222
    padding 12px 0
    margin 10px 10px 0

    > div
      display block
      margin 0 auto
      background: url('/img/sprite.png') no-repeat -584px -29px;
      width: 142px;
      height: 30px;


  ul.sidebar-nav
    list-style none
    padding 0

    li
      margin 10px 0

      a
        color #222
        text-decoration none
        font-size 20px
        font-weight 300

        &:hover
          color #BF5F61


  ul.social-links
    list-style none
    padding 0
    margin 70px 0 0

    li
      display inline
      margin 0 10px

      a
        display inline-block
        opacity(0.8)
        transition opacity 0.2s linear

        &:hover
          opacity(1)

    li.vimeo > a
      background: url('/img/sprite.png') no-repeat -407px -28px;
      width: 32px;
      height: 29px;

    li.twitter > a
      background: url('/img/sprite.png') no-repeat -456px -28px;
      width: 34px;
      height: 29px;

    li.linkedin > a
      background: url('/img/sprite.png') no-repeat -504px -27px;
      width: 34px;
      height: 32px;

  .copyright
    font-size 11px
    text-transform none
    margin-top 10px

.content-wrapper
  margin-left 320px
  padding-right 30px

  .kristen-harding
    text-decoration none
    color #222
    font-size 48px
    text-transform uppercase
    font-weight 300
    position relative
    letter-spacing 2px
    margin-left -5px

    strong
      font-weight 400

    .writer-director-editor
      position absolute
      letter-spacing 0
      top 4px
      right -60px
      list-style none
      text-align left
      font-size 11px

      li
        margin-top -4px

.resume
  width 700px
  text-transform uppercase
  font-weight 300
  font-size 24px

  .professional, .creative
    display inline-block
    color #222
    text-decoration none

    span
      display block
      margin-bottom 10px

  .professional
    border-right 3px solid #222
    padding-right 60px

  .creative
    padding-left 65px

  .professional > span
    background: url('/img/sprite.png') no-repeat -173px -12px;
    width: 175px;
    height: 254px;
    margin-left -10px

  .creative > span
    background: url('/img/sprite.png') no-repeat -7px -6px;
    width: 154px;
    height: 252px;
    margin-left -15px

.about-page
  max-width 800px

  img.kristen
    display block
    width 450px
    height 300px

  p
    font-size 16px

.contact-page
  .say-hi
    text-transform uppercase
    margin-bottom 0.5em

  img
    width 600px
    height 337px

  ul.contact-methods
    list-style none
    margin 0 0 25px
    padding 0

    li
      margin 5px 0

      a
        color #222
        text-decoration none

        .email
          display inline-block
          margin 7px 10px -7px 0
          background: url('/img/sprite.png') no-repeat -362px -7px;
          width: 37px;
          height: 26px;

        .phone
          display inline-block
          margin 7px 10px -7px 0
          background: url('/img/sprite.png') no-repeat -362px -50px;
          width: 36px;
          height: 30px;

.work-page
  margin-left -15px

  .video
    display inline-block
    width 234px
    vertical-align top
    margin 4px 15px
    text-align center
    color #222
    text-decoration none
    text-transform uppercase
    font-weight 300
    position relative


    > img
      width 234px
      height 163px
      background-color black

    .video-title
      display block

    .hover-title
      position absolute
      top 0
      left 0
      display block
      background-color black
      opacity(0)
      color #fff
      width 234px
      padding-top 70px
      font-size 20px
      height 93px
      transition opacity 0.2s linear

    &:hover
      .hover-title
        opacity(0.5)

.video-page
  .coming-soon
    width 598px
    height 198px
    border 1px solid #ccc
    text-align center
    padding-top 150px
    color #999

  .title
    font-size 18px
    font-weight 400
    margin-top 5px

  .description
    font-size 16px
    font-weight 300