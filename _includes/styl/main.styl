@import "nib"

body
  font-family: 'Lato', sans-serif

.clearfix
  clear both

.home-wrapper
  text-align center
  margin-top 120px

  .kristen-harding
    font-size 60px
    text-transform uppercase
    font-weight 300
    position relative

    .writer-director-editor
      position absolute
      top -2px
      right -75px
      list-style none
      text-align left
      font-size 13px

.home-nav
  text-align center

  .home-nav-item
    display inline-block
    margin 0 20px
    text-align center
    text-transform uppercase
    color #222
    text-decoration none
    font-size 20px
    font-weight 300

    .nav-image-1
      display block
      background: url('/img/sprite.png') no-repeat 0 0;
      width: 107px;
      height: 127px;
      margin-bottom 10px

    .nav-image-2
      display block
      background: url('/img/sprite.png') no-repeat -115px -13px;
      width: 83px;
      height: 106px;
      margin-top -8px
      margin-bottom 18px

    .nav-image-3
      display block
      background: url('/img/sprite.png') no-repeat -201px -13px;
      width: 73px;
      height: 105px;
      margin-top -8px
      margin-bottom 18px

    .nav-image-4
      display block
      background: url('/img/sprite.png') no-repeat -282px -1px;
      width: 107px;
      height: 126px;
      margin-bottom 10px

.sidebar, .content
  padding-top 20px

.sidebar
  width 300px
  float left
  text-align center
  text-transform uppercase

  .current-page-logo
    font-size 48px

  .current-page-name
    font-weight 300
    font-size 32px

  .sidebar-logo
    font-size 20px
    border-style solid
    border-width 3px 0
    border-color #222
    padding 10px 0
    margin 10px 5px 0

  ul.sidebar-nav
    list-style none
    padding 0

    li
      margin 10px 0

      a
        color #222
        text-decoration none
        font-size 20px
        font-weight 300

.content-wrapper
  margin-left 320px
  padding-right 30px

  .kristen-harding
    text-decoration none
    color #222
    font-size 60px
    text-transform uppercase
    font-weight 300
    position relative

    .writer-director-editor
      position absolute
      top -2px
      right -75px
      list-style none
      text-align left
      font-size 13px

.resume
  width 700px
  text-align center
  text-transform uppercase
  font-weight 300
  font-size 24px

  .professional, .creative
    display inline-block
    color #222
    text-decoration none

    span
      display block

.footer-wrapper
  padding 30px 10px 2px

  .social-footer
    float left
    list-style none
    padding 0
    margin 0

    li
      display inline

  .copyright
    float right
    font-size 11px

.about-page
  img.kristen
    display block
    margin 0 auto
    width 600px
    height 400px

  p
    font-size 18px

.contact-page
  .say-hi
    text-transform uppercase

  img
    width 600px
    height 337px

  ul.contact-methods
    list-style none
    margin 0 0 20px
    padding 0

    li
      a
        color #222
        text-decoration none

        .email
          margin-right 10px

        .phone
          margin-right 10px

.work-page
  .video
    display inline-block
    width 280px
    vertical-align top
    margin 10px
    text-align center
    color #222
    text-decoration none
    text-transform uppercase
    font-weight 300
    position relative


    > img
      width 280px
      height 190px
      background-color black

    .video-title
      display block

    .hover-title
      position absolute
      top 0
      left 0
      display block
      background-color black
      opacity(0)
      color #fff
      width 280px
      padding-top 80px
      font-size 20px
      height 110px
      transition opacity 0.2s linear

    &:hover
      .hover-title
        opacity(0.5)

.video-page
  .vimeo-embed
    background-color #000
    width 700px
    height 400px

  .title
    font-size 24px
    font-weight 400

  .description
    font-size 18px
    font-weight 300